<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sistematickets.VistaTecnicoController"
      spacing="10" alignment="CENTER" padding="20">

    <Label text="Tickets Asignados al Técnico" style="-fx-font-size: 16px;"/>

    <TableView fx:id="tablaTickets">
        <columns>
            <TableColumn fx:id="colTitulo" text="Título"/>
            <TableColumn fx:id="colEstado" text="Estado"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Marcar En Proceso" onAction="#marcarEnProceso"/>
        <Button text="Marcar Resuelto" onAction="#marcarResuelto"/>
    </HBox>
</VBox>
